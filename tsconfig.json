{
	  "compilerOptions": {
		    "target": "es2017",
		    "module": "commonjs",
		    "outDir": "./dist",
		    "rootDir": "./src",
		    "declaration": false,
		    "strict": true,
		    "sourceMap": true,
		    "noImplicitAny": true,
		    "alwaysStrict": true,
		    "typeRoots": [
            "./node_modules/@types"
        ]
	  },
	  "exclude": [
		    "./dist/*",
		    "./node_modules/*"
	  ],
	  "include": [
		    "./src/**/*.ts"
	  ]
}
